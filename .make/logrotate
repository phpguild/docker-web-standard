.PHONY: logrotate/install

logrotate/install:
ifneq ($(wildcard $(shell pwd)/config/logrotate/$(APP_INSTANCE)),)
ifeq ($(wildcard /etc/logrotate.d/$(APP_NAME)-$(APP_INSTANCE)),)
	$(SUDO) ln -s "$(shell pwd)/config/logrotate/$(APP_INSTANCE)" "/etc/logrotate.d/$(APP_NAME)-$(APP_INSTANCE)"
endif
endif
